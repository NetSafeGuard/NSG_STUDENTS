{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:2000",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
      "productName": "NetSafeGuard Students",
      "version": "0.0.1"
    },
    "tauri": {
      "allowlist": {
        "all": false,
        "process": {
          "all": false,
          "exit": false,
          "relaunch": true,
          "relaunchDangerousAllowSymlinkMacos": false
        },
        "shell": {
          "all": false,
          "open": true
        },
        "window": {
          "all": false,
          "close": true,
          "hide": true,
          "show": true,
          "maximize": true,
          "minimize": true,
          "unmaximize": true,
          "unminimize": true,
          "startDragging": true
        }
      },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
         {
           "fullscreen": false,
           "resizable": true,
           "title": "Students NetSafeGuard",
           "width": 1090,
           "height": 624,
           "center": true,
           "minWidth": 800,
           "minHeight": 600,
           "decorations": false,
           "transparent": true
         }
       ]
  }
}
