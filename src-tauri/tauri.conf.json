{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:2000",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
      "productName": "NetSafeGuard Students",
      "version": "0.0.1"
    },
    "tauri": {
      "allowlist": {
        "all": false,
        "process": {
          "all": false,
          "exit": false,
          "relaunch": true,
          "relaunchDangerousAllowSymlinkMacos": false
        },
        "shell": {
          "all": false,
          "open": true
        },
        "window": {
          "all": false,
          "close": true,
          "hide": true,
          "show": true,
          "maximize": true,
          "minimize": true,
          "unmaximize": true,
          "unminimize": true,
          "startDragging": true
        }
      },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "students.netsafeguard.developers",
      "icon": [
        "icons/32x32.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlFQkU4Qzg0ODhGMzA3REEKUldUYUIvT0loSXkrbnJQbmR2ZVVCUjJPcnIweVRqUVhVUDRmeEZ5SEVBQ0UrNkd2c3Y5LzQzbGUK",
      "endpoints": [
        "https://api.netsafeguard.cloud/api/v1/update/students?current_version={{current_version}}&target={{target}}&arch={{arch}}"
      ],
      "windows": {
        "installMode": "basicUi"
      }
    },
    "windows": [
         {
           "fullscreen": false,
           "resizable": true,
           "title": "Students NetSafeGuard",
           "width": 1090,
           "height": 624,
           "center": true,
           "minWidth": 800,
           "minHeight": 600,
           "decorations": false,
           "transparent": true
         }
       ]
  }
}
